<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone (device with the internet):" />
    
    <Button
        android:id="@+id/startProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start provider server" />

    <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        />
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tablet (device to tether):" />
    
    <Button
        android:id="@+id/startReader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start reader notification" />
    
    <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        />
    
    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop" />
    

</LinearLayout>